@using System.Runtime.Versioning
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
    <title>

        Работа столовой

    </title>
    <meta http-equiv="X-UA-Compatible" content="IE=IE8"/>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ViewModel")
    @RenderSection("scripts", required: false)
</head>
<body class="pagebg">
    <div class="wrapper toppad">
        <div class="tophead">
            <div class="dleft">
                <div class="dright">
                    <h1 class="logo">
                        <a href="">
                            <img style="border: 0" src="@Url.Content("~/Content/css/Images/Infocom.png")" title="Инфоком ЛТД" alt="Инфоком ЛТД" />
                        </a>
                    </h1>
                    <div class="tophead_i1">
                        <div class="blockinform">

                            <div class="dleft">
                                <div class="dright">
                                    <div class="logOnGreeting">
                                        <div style="text-align: right;">
                                            @if (Session["EmployeeFullname"] != null)
                                            {
                                                <span> Вы вошли как, @Session["EmployeeFullname"]<a href="@Url.RouteUrl(new {action = "LogOff", controller = "Account", area = ""})"> Выход </a></span>
                                            }
                                            else
                                            {
                                                <span>
                                                    Пожалуйста,
                                                    авторизируйтесь
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="menucontainer"><span></span>
                    <div id="infoTitle"></div></div>
                    </div>
                
            </div>
        </div>
        <div class="page">
            <div class="dleft">
                <div class="dright">


                            @RenderBody()


                    <div id="footer">
                        Copyright 2016 INFOCOM Ltd. Все права защищены.&nbsp;
                        <br />

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            var homeLoader = $('body').loadingIndicator({
                useImage: false
            }).data("loadingIndicator");

            $.ajax({
                beforeSend: function () {
                    homeLoader.show();
                },
                complete: function () {
                    homeLoader.hide();
                }
                // ......
            });
        });
    </script>
</body>
</html>
