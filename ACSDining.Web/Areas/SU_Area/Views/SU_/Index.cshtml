@model ACSDining.Web.Areas.SU_Area.Models.WeekMenuModel

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-7 col-sm-10 col-xs-10">
        <input type="button" id="btnaddmenu" class="btn btn-lg btn-success" value="Добавить меню на следующую неделю" />
    </div>
    </div>
<hr />

<div class="panel panel-default pre-scrollable">
    <table class="table table-striped table-bordered table-responsive table-condensed table-hover"> 
        <thead>
            <tr>
                <th>День недели</th>
                <th>Категория блюда</th>
                <th colspan="2">Название</th>
                <th colspan="2">Стоимость</th>
                <th>Изменить</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:{ data:MFD_models, as: 'model' }">
            <tr>
                <td style="vertical-align: middle; text-align:center">
                    <span data-bind="text: model.DayOfWeek"></span>
                </td>
                <td data-bind="foreach:{ data:Dishes, as: 'dish' }">
                    <div style="border-bottom:1px solid">
                        <span data-bind="text:dish.category"></span>:
                    </div>
                </td>
                <td colspan="2" data-bind="foreach:{ data:Dishes, as: 'dish' }">
                    <div style="border-bottom:1px solid">
                        <span data-bind="text:dish.title"></span>
                        <a href="#" type="button" class=" btn-danger btn-xs" data-bind="visible: model.Editing()" style="float:right" >Изменить</a>
                    </div>
                </td>
                <td data-bind="foreach:{ data:Dishes, as: 'dish' }">
                    <div>
                        <span data-bind="text:dish.price.toFixed(2)" style="float: right; border-bottom: 1px solid"></span>
                    </div>
                </td>
                <td style="text-align: right; vertical-align:middle; height:100%">
                    <span data-bind="text:model.TotalPrice"></span>
                </td>
                <td style="vertical-align: middle; text-align:center">
                    <button class="glyphicon glyphicon-pencil btn-success btn-lg" data-bind="click: model.Editable" />
                </td>

            </tr>
        </tbody>
            <tr><td style="border: 0px"></td><td colspan="2" style="border: 0px"></td>
                <th style="float: right; border: 0px">
                    <span> Итого: </span>
                </th>
                <th colspan="2" style="text-align:right">
                    <span data-bind="text:SummaryPrice"></span>
                </th>
                <td></td>
            </tr>
        <tr>
            <td></td>
        </tr>
    </table>
</div>

<div id="modalbox" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1>Register New Person</h1>
            </div>
            <div class="modal-body">
                <table class="table table-condensed table-striped table-bordered">
                    <tr>
                        <td>First Name:</td>
                        <td>
                            <input type="text" data-bind="value:FirstName" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>Middle Name:</td>
                        <td>
                            <input type="text" data-bind="value:MiddleName" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>Last Name:</td>
                        <td>
                            <input type="text" data-bind="value:LastName" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>Address</td>
                        <td>
                            <textarea data-bind="value:Address" class="form-control"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>City:</td>
                        <td>
                            <input type="text" data-bind="value:City" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>State:</td>
                        <td>
                            <select data-bind="options:States,optionsCaption:'Select State',value:SelectedState" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>Phone No:</td>
                        <td>
                            <input type="text" data-bind="value:PhoneNo" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>Mobile No:</td>
                        <td>
                            <input type="text" data-bind="value:MobileNo" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>Email Address:</td>
                        <td>
                            <input type="email" data-bind="value:EmailAddress" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>Occupation:</td>
                        <td>
                            <select type="text" data-bind="options:Occupations,optionsCaption:'Select Option',value:SelectedOccupation" class="form-control" />
                        </td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Close</button>
                <button class="btn btn-primary" data-bind="click:save">Ok</button>
            </div>
        </div>
    </div>
</div>
@*<script src="~/Scripts/knockout.mapping-latest.js" type="text/javascript"></script>*@

@Scripts.Render("~/bundles/knockoutBind")
<script type="text/javascript">
    (function() {
        $(".pre-scrollable").css("maxHeight", "570px")
        .parents('.banner-caption').css({ "top": "12%" });
    })();
</script>

