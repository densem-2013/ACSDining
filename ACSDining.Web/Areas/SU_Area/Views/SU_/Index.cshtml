@model ACSDining.Web.Areas.SU_Area.Models.WeekMenuModel

@{
    ViewBag.Title = "Index";
}


<input type="button" id="btnaddmenu" class="btn btn-lg btn-success" value="Добавить меню на следующую неделю" />
<hr />

<div class="panel panel-default pre-scrollable">
    <table class="table table-striped table-bordered table-responsive table-condensed table-hover">
        <thead>
            <tr>
               <th>День недели</th>
                <th style="width:200px">Категория блюда</th>
                <th >Название</th>
                <th colspan="2">Стоимость</th>
                <th>Изменить</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:{ data:MFD_models, as: 'model' }">
            <tr>
                <td rowspan="4">
                    <span data-bind="text: model.DayOfWeek"></span>
                </td>
                <td colspan="3"  rowspan="4" style="padding:0">
                    <table class="table-bordered table-hover table-striped">
                        <tbody data-bind="foreach:{ data:Dishes, as: 'dish' }">
                            <tr>
                                <td style="width:200px">
                                    <span data-bind="text:dish.category"></span>:
                                </td>
                                <td style="width:300px">
                                    <span data-bind="text:dish.title"></span>
                                </td>
                                <td >
                                    <span data-bind="text:dish.price.toFixed(2)" style="float:right"></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
                <td>
                    <span data-bind="text:model.TotalPrice"></span>
                </td>
                <td rowspan="4">
                    <button class="btn glyphicon glyphicon-pencil" data-bind="click:$root.getSelected" />
                </td>

            </tr>
            <tr></tr>
            <tr></tr>
            <tr></tr>
            <tr></tr>
        </tbody>
    </table>
</div>

