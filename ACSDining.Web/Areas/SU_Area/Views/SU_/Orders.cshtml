@{
    Layout = "~/Areas/SU_Area/Views/Shared/_LayoutForPaiments.cshtml";
}

<div class="col-sm-12  object-non-visible" data-animation-effect="fadeIn" style="margin-left: 0" id="ordersObject">
    <div class="panel panel-default" id="mfwPanel">

        <table class="table table-striped table-bordered fixed  table-hover" id="ordesTable">

            <thead>

            <tr>
                <th class="t-header" style="padding: 2px !important" rowspan="4"><span>№</span></th>
                <th class="t-header" style="padding: 2px !important; text-align: center" rowspan="4"><span>Ф.И.О</span></th>
                <!--ko foreach: DaysOfWeek-->
                <th colspan="4" class="t-header" style="padding: 2px !important; text-align: center; height: 40px !important"><span data-bind="text:$data"></span></th>
                <!--/ko-->
                <th rowspan="4" class="t-header" style="padding: 2px !important; text-align: center; white-space: normal !important;"><span>Стоимость заказа за неделю</span></th>
            </tr>
                <tr data-bind="foreach: DaysOfWeek" id="groups">
                    <!--ko foreach: $root.Categories-->
                    <th class="thvert">
                        <div class="verticalText" data-bind="text: $data"></div>
                    </th>
                    <!--/ko-->
                </tr>
            <tr>
                <th style="text-align: center" data-bind="attr:{colspan: WeekDishPrices().length}"><span>Цена за одну порцию, грн</span></th>
            </tr>
            <tr>
                <!--ko foreach: WeekDishPrices-->
                <th class="t-header" style="padding: 2px !important"><span data-bind="text: $data.toFixed(2)"></span></th>
                <!--/ko-->
            </tr>
            </thead>
            <colgroup>
                <col class="col-sm-1"/> 
                <col class="col-sm-3" /> 
                <!--ko foreach: WeekDishPrices-->
                <col class="col-sm-1" /> 
                <!--/ko-->
                <col class="col-sm-3" /> 
            </colgroup>
            <tbody>
            <!--ko foreach: pagedList-->
                <tr data-bind="singleClick: $root.rowclicked, hover: isHovering, css:{ allowedit: IsSelectedRow  }">
                    <td>
                        <span data-bind="text: $root.pageIndex() * $root.pageSize() + $index() + 1"></span>
                    </td>
                    <td class="rights"><span data-bind="text: UserName"></span></td>
                    <!--ko foreach: UserWeekOrderDishes-->
                    <!--ko ifnot: $parent.IsSelectedRow-->
                    <td class="orderquant">
                        <span data-bind="text: Quantity"></span>
                    </td>
                    <!--/ko-->
                    <!--ko if: $parent.IsSelectedRow-->
                    <td class="orderquant" data-bind="event : { mouseover: doubleClick , mouseout: function(){ hasFocus=false}}">
                        <!--ko ifnot: isEditMode-->
                        <span data-bind="text: Quantity"></span>
                        <!--/ko-->
                        <!-- ko if: isEditMode -->
                        <!-- ko if: ($index() % 4 === 0) -->
                        <select class="input-small" data-bind="options: $root.FirstCourseValues, value: Quantity, hasFocus:isEditMode,event:{focusout: function(){ $root.update($parent,$index()+1,$data); }}"></select>
                        <!--/ko-->
                        <!-- ko ifnot: ($index() % 4 === 0) -->
                        <select class="input-small" data-bind="options: $root.QuantValues, value: Quantity, hasFocus:isEditMode,event:{focusout: function(){ $root.update($parent,$index()+1,$data); }}"></select>
                        <!--/ko-->
                        <!--/ko-->
                    </td>
                    <!--/ko-->
                    <!--/ko-->
                    <th style="text-align: center"><span data-bind="text: WeekSummaryPrice"></span></th>
                </tr>
            <!--/ko-->
            <tr>
                <th class="t-header" style="padding: 2px !important" colspan="2"><span>Всего заказано</span></th>
                <!--ko foreach: SummaryDishQuantities-->
                <th class="t-header" style="padding: 2px !important"><span data-bind="text: $data"></span></th>
                <!--/ko-->
                <th class="t-header" style="padding: 2px !important; font-weight: bold;" data-bind="text: WeekTotal"></th>
            </tr>
            </tbody>
            <colgroup>
                <col data-bind="attr:{class: 'col-sm-'+ Math.ceil($root.DaysOfWeek().length*$root.Categories().length/3 )}" />
                <col data-bind="attr:{class: 'col-sm-'+ Math.ceil($root.DaysOfWeek().length*$root.Categories().length/3)}" />
                <col class="col-sm-2" />
                <col data-bind="attr:{class: 'col-sm-'+ Math.ceil($root.DaysOfWeek().length*$root.Categories().length/3)}" />
            </colgroup>
            <tfoot>
                <tr>
                    <td class="t-header" data-bind="attr:{colspan: Math.ceil($root.DaysOfWeek().length*$root.Categories().length/3)}">
                        <button type="button" style="float: right" class="btn btn-default btn-circle" data-bind="click: previousPage, css:{disabled: pageIndex() === 0}">
                            <span class="glyphicon glyphicon-hand-left"></span>
                        </button>
                    </td>
                    <td class="t-header" data-bind="attr:{colspan: Math.ceil($root.DaysOfWeek().length*$root.Categories().length/3)}">
                        <div style="text-align: center; min-width: 200px">
                            <span class="glyphicon ">Страница </span>
                            <span class="label-info " data-bind=" text: pageIndex()+1"></span>
                            <span> из </span>
                            <span class="label-info" data-bind=" text: maxPageIndex()+1"></span>
                        </div>
                    </td>
                    <td class="t-header" colspan="2">
                        <button type="button" class="btn btn-default btn-circle" data-bind="click: nextPage, css:{disabled: pageIndex() === maxPageIndex()}" style="float: left">
                            <span class="glyphicon glyphicon-hand-right"></span>
                        </button>
                    </td>
                    <td class="t-header" data-bind="attr:{colspan: Math.ceil($root.DaysOfWeek().length*$root.Categories().length/3)}">
                        <div style="min-width:350px">
                            <span> Отображать </span>
                            <select class="input-sm" data-bind="options: $root.PageSizes, value: pageSize"></select>
                            <span> элементов на странице</span>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
    <div id="modalMessage" class="modal">

        <div class="modal-dialog">
            <div class="panel panel-default">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 data-bind="text: Title"></h1>
                    </div>
                    <div class="modal-body">
                        <span data-bind="text: Message"></span>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/WeekOrders")

