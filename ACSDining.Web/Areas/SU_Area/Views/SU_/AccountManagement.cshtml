@{
    ViewBag.Title = "AccountManagement";
}
<div class="col-md-9  object-non-visible" data-animation-effect="fadeIn" style="margin-left: 0; padding-left: 0px;" id="accountsObject">
    <div class="panel panel-default" id="mfwPanel" style="margin: 20px">

        <table class="table table-striped table-bordered table-responsive table-condensed table-hover" id="accountsTable" style="text-align: center">
            <colgroup>
                <col class="col-sm-1"/>
                <col class="col-sm-4"/>
                <col class="col-sm-4"/>
                <col class="col-sm-2"/>
                <col class="col-sm-2"/>
                <col class="col-sm-2"/>
                <col class="col-sm-2"/>
                <col class="col-sm-2"/>
            </colgroup>
            <thead>
            <tr>
                <th class="t-header">№</th>
                <th class="t-header">Ф.И.О.</th>
                <th class="t-header">Email</th>
                <th class="t-header">Дата последнего входа</th>
                <th class="t-header">Дата регистрации</th>
                <th class="t-header">Баланс</th>
                <th class="t-header">Может делать заказ</th>
                <th class="t-header">Удалён из системы</th>
            </tr>
            </thead>
            <tbody>
            <!-- ko foreach: filterList-->
            <tr>
                <td><span data-bind="text: $root.pageIndex()*$root.pageSize()+$index() + 1"></span></td>
                <td ><span data-bind="text: FullName" style="float: left; padding-left: 5px"></span></td>
                <!--ko with: Email-->
                <td class="lastTD"  style="float: left; padding-left: 5px" data-bind="singleClick: function(){$data.clicked($element)}, event : { dblclick: doubleClick }, tooltip: {title: 'DoubleClick For Edit', placement: 'top',container: 'body'}">
                    <!--ko if: isEditMode-->
                    <input type="text" data-bind="value:Email, hasFocus:isEditMode, event:{focusout: function(){$data.onFocusOut(); $root.updateEmail($parent);} }">
                    <!--/ko-->
                    <!--ko ifnot: isEditMode-->
                    <span data-bind="text: Email"></span>
                    <!--/ko-->
                </td>
                <!--/ko-->
                <td ><span data-bind="text: LastLoginTime"></span></td>
                <td ><span data-bind="text: RegistrationDate"></span></td>
                <td ><span data-bind="text: Balance"></span></td>
                <td >
                    <div class="checkbox-btn" style="vertical-align: middle">
                        <input type="checkbox" data-bind="click: function(){ return $root.bookupdate($data);}, checked: $data.CanMakeBooking, checkedValue: $data.CanMakeBooking , attr:{id: 'rcammb' + $index(), name:'rcammb' + $index()}" />
                        <label data-bind=" attr:{'for': 'rcammb' + $index()}"></label>
                    </div>
                </td>
                <td >
                    <div class="checkbox-btn" style="vertical-align: middle">
                        <input type="checkbox" data-bind="click: function(){ return $root.existsupdate($data);},checked: !$data.IsExisting(), value: $data.IsExisting, attr:{id: 'rcexist' + $index(), name: 'rcexist' + $index()}" />
                        <label data-bind="attr:{'for': 'rcexist' + $index()}"></label>
                    </div>
                </td>
            </tr>
            <!--/ko-->

            </tbody>
            <tfoot>
            <tr>
                <td class="t-header">
                    <button type="button" class="btn btn-default btn-circle" data-bind="click: previousPage, css:{disabled: pageIndex() === 0}">
                        <span class="glyphicon glyphicon-hand-left"></span>
                    </button>
                </td>
                <td class="t-header" style="-moz-min-width: 200px; -ms-min-width: 200px; -o-min-width: 200px; -webkit-min-width: 200px; min-width: 200px">
                    <div style="text-align: center">
                        <span class="glyphicon ">Страница </span>
                        <span class="label-info " data-bind=" text: pageIndex()+1"></span>
                        <span> из </span>
                        <span class="label-info " data-bind=" text: maxPageIndex()+1"></span>

                    </div>
                </td>
                <td class="t-header">
                    <button type="button" class="btn btn-default btn-circle" data-bind="click: nextPage, css:{disabled: pageIndex() === maxPageIndex()}" style="float: left">
                        <span class="glyphicon glyphicon-hand-right"></span>
                    </button>
                </td>
                <td colspan="5" class="t-header">
                    <div>
                        <span> Отображать </span>
                        <select class="input-sm" data-bind="options: $root.PageSizes, value: pageSize"></select>
                        <span> элементов на странице</span>
                    </div>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
</div>
    @Scripts.Render("~/bundles/AccountsInfo")
